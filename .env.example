# Configurações do Projeto FisioFlow4

# Docker Compose
COMPOSE_PROJECT_NAME=fisioflow4

# Banco de Dados
POSTGRES_DB=fisioflow_dev
POSTGRES_USER=fisioflow
POSTGRES_PASSWORD=your_postgres_password_here
DATABASE_URL=postgresql://fisioflow:your_postgres_password_here@localhost:5432/fisioflow_dev

# Redis
REDIS_PASSWORD=your_redis_password_here
REDIS_URL=redis://:your_redis_password_here@localhost:6379/0

# Backend Flask
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:5000
VITE_API_BASE_URL=http://localhost:5000/api/v1
VITE_APP_NAME=FisioFlow

# Email
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_email_password_here
MAIL_DEFAULT_SENDER=noreply@fisioflow.com

# Celery
CELERY_BROKER_URL=redis://:your_redis_password_here@localhost:6379/0
CELERY_RESULT_BACKEND=redis://:your_redis_password_here@localhost:6379/0

# Logs
LOG_LEVEL=INFO

# Upload
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Production Settings (quando for para produção)
# SENTRY_DSN=https://your-sentry-dsn-here